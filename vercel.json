{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/users",
      "methods": ["GET"],
      "dest": "/api/users.js"
    },
    {
      "src": "/api/users",
      "methods": ["POST"],
      "dest": "/api/users.js"
    },
    {
      "src": "/api/products",
      "methods": ["GET"],
      "dest": "/api/products.js"
    },
    {
      "src": "/api/products",
      "methods": ["POST"],
      "dest": "/api/products.js"
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.js"
    }
  ]
}
